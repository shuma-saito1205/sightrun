<div class="container-floid m-5">
  <h3 class="text-center mb-5">-Activity Top-</h3>

    <div class="row justify-content-center mb-4" style="padding-top: 30px; padding-bottom: 30px;">
      <h1 class="display-4">
        <%= number_with_precision(@total_mileage, precision: 2) %>km&emsp;&emsp;<%= @total_time %>時間
      </h1>
    </div>

    <div class="row justify-content-center">

      <div class="col-md-4">
        <%= render 'new', activity: @activity %><br>
      </div>

      <div class="offset-md-1"></div>

      <div class="col-md-7">
        <h5 class="text-center mb-4">Activity index</h5>
        <table class="table table-hover table-responsive-sm">
        <% if @activities.present? %>
          <% @activities.reverse_each do |activity| %>
          <tbody class="table-group-divider">
            <tr>
              <td>
                <p>Date：<%= activity.created_at.strftime('%Y/%m/%d') %></p>
                <div class="row">
                  <div class="col"><%= activity.mileage %> km </div>
                  <div class="col">
                    <% hours = '%02d' % (activity.hour.to_i / 3600) %>
                    <% minutes = '%02d' % ((activity.hour.to_i % 3600) / 60) %>
                    <% seconds = '%02d' % (activity.hour.to_i % 60) %>
                    <%= hours %>:<%= minutes %>:<%= seconds %>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
          <% end %>
        <% else %>
          <p class="text-center">No activity</p>
        <% end %>
        </table>
      </div>

    </div>

</div>