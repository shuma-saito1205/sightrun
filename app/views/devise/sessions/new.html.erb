<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-4">
    <%= form_with model: @user, url: user_session_path do |f| %>
      <p class="text-center h3 mb-4">Sign in</h1>
      <div class="field">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "E-mail address" %>
      </div>
      <div class="field mt-3">
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field mt-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <button class="btn btn-lg btn-outline-success btn-block mt-3" type="submit">Log in</button>
    <% end %>
    </div>
  </div>
</div>

