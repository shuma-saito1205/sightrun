<div class="form-signin-container">
  <h1 class="h3 mb-3 font-weight-normal-">Sign in</h1>
  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail address" %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <button class="btn btn-lg btn-outline-success btn-block" type="submit">
      Log in
    </button>
  <% end %>
</div>

