<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <p class="text-center h3 mb-4 font-weight-normal-">Sign up</p>
        <div class="field">
          <%= f.text_field :name, class: "form-control", placeholder: "User name" %>
        </div>
        <div class="field mt-3">
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email address" %>
        </div>

        <div class="field mt-3">
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Password" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Pw-confirmation" %>
        </div>
        <button class="btn btn-lg btn-outline-success btn-block mt-3" type="submit">Sign up</button>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
