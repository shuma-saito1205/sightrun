<div class="container-floid m-5">
  <h3 class="text-center mb-5">-Event show-</h3>
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h4>・Title：<%= @event.title %></h4>
      <h4>・Detail：<%= @event.detail %></h4>
      <h4>・Location：<%= @event.location %></h4>
      <h4>・Schedule　Start：<%= @event.start.strftime("%Y-%m-%d  %H:%M") %> ~</h4>
      <h4>　　　　　　    End：<%= @event.end.strftime("%Y-%m-%d  %H:%M") %></h4>
    </div>
  </div>
  <div class="row justify-content-center mt-4">
    <%= link_to 'Back', events_path, class:"btn btn-outline-success", style: "width: 30%;" %>
  </div>
</div>