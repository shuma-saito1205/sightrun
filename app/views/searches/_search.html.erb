<div class="container-fluid d-flex justify-content-end">
  <% if user_signed_in? %>
    <div class="search_form ">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <div class="row align-items-center">
      <div class="col-auto pr-0"><%= f.text_field :word %></div>
      <div class="col-auto pr-0"><%= f.select :range, options_for_select([['User'], ['Post']]) %></div>
      <div class="col-auto pr-0"><%= f.select :search, options_for_select([["perfect match","perfect_match"], ["forward match","forward_match"],  ["backward match","backward_match"], ["partial match","partial_match"]]) %></div>
      <div class="col-auto pr-0"><%= f.submit "search", class: "btn btn-outline-dark text-success" %></div>
      </div>
    <% end %>
  </div>
<% end %>
</div>