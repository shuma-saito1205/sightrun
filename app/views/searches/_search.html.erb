<% if user_signed_in? %>
  <div class="search_form ">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['User'], ['Post']]) %>
      <%= f.select :search, options_for_select([["perfect match","perfect_match"], ["forward match","forward_match"],  ["backward match","backward_match"], ["partial match","partial_match"]]) %>
      <%= f.submit "search", class: "btn btn-outline-dark text-success" %>
    <% end %>
  </div>
<% end %>