<h1>All comments</h1>

<% @post_comments.each do |post_comment| %>
  <p>Name：<%= @users.find(post_comment.user_id).name %><p/>
  <p>Comment：<%= post_comment.comment %></p>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><br>
  <%= link_to 'Delete', admin_post_comment_path(post_comment), method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
<% end %>