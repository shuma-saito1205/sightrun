<div class="scrollable-container" style="height: 500px; overflow-y: scroll;">
<table class="table table-hover table-responsive-sm">
  <% users.reverse_each do |user| %>
    <tbody class="table-group-divider border-top-color-black">
      <tr>
        <th scope="row">
          <%= image_tag user.get_profile_image(100,100), class: "rounded-circle", style: "width: 80px; height: 80px;" %>
        </th>
        <td>
          <div class="row pt-2">
            <div class="col-5 text-left">
              <%= user.name %>さん
            </div>
            <div class="col-3">
              <%= user.email %>
            </div>
          </div>
          <div class="row pt-3">
            <%= link_to "User show", admin_user_path(user.id) %>
          </div>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
</div>