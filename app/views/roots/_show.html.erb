<h5 class=" text-center">Introduction</h5>

<div class="row justify-content-center pt-3">
  <% if user.present? && user.course_introduction.present?%>
    <%= simple_format(user.course_introduction, sanitize: true, class:"wrap-text mt-2 text-left",style:"word-break: break-all;" ) %>
  <% else %>
    <p class="text-center">Not seting introduction</p>
  <% end %>
</div>

<div class="row justify-content-center pt-3">
  <%= link_to 'edit introduction', edit_user_path(current_user), class: 'btn btn-outline-success btn-block mt-3' %><br>
  <%= link_to 'new course', new_user_root_path, class: 'btn btn-outline-success btn-block mt-3' %>
</div>
