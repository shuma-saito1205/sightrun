    <div class="col-md-7">
      <div class="container">
        <div id="map"></div>       
      </div>

      <script>
        const currentUserId = <%= current_user.id %>;
      </script>

      <%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>
    </div>
  </div>
</div>


