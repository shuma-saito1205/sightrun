<h1>New Favorite course</h1>

<div class="container">
  <div id="map"></div>
</div>

<%= form_with model: @root, url: user_roots_path(current_user), method: :post do |form| %>
  <%= form.hidden_field :latitude, id: 'latitude' %>
  <%= form.hidden_field :longitude, id: 'longitude' %>
  <%= form.submit 'Save Root' %>
<% end %>

<%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>


