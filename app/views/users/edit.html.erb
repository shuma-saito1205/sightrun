<h2>Profile edit</h2>
<%= form_with model: @user do |f| %>
  <label for="InputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
  <label for="InputImage">Profile Image</label>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <% if @user == current_user %>
     <%= f.submit "Save" %>
    <%= link_to "Withdrawal", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to Withdrawal"} %>
  <% end %>
<% end %>