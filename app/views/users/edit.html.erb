<h2>Profile edit</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error occurred.
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="InputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
  <label for="InputCourseintroduction">Course Introduction</label>
  <%= f.text_field :course_introduction, autofocus: true, id:"inputCourseintroduction", placeholder:"Introduction" %>
  <label for="InputImage">Profile Image</label>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <% if @user == current_user %>
     <%= f.submit "Save" %>
    <%= link_to "Withdrawal", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to Withdrawal"} %>
  <% end %>
<% end %>