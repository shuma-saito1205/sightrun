<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-5 mt-4">
      <h3 class=" text-center">-Profile edit-</h3>

      <div class="error message mt-4 mb-4">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error occurred.
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <div class="from mb-4">
        <%= form_with model: @user do |f| %>
          <label for="InputName">Name</label>
          <%= f.text_field :name, class: "form-control mb-3", autofocus: true, id:"inputName", placeholder:"Name" %>
          <label for="InputCourseintroduction">Course Introduction</label>
          <%= f.text_field :course_introduction, class: "form-control mb-3", style: "height: 220px;", autofocus: true, id:"inputCourseintroduction", placeholder:"Introduction" %>
          <label for="InputImage">Profile Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
          <% if @user == current_user %>
            <button class="btn btn-outline-success btn-block mt-4 mb-3" type="submit">Save</button>
            <%= link_to "Withdrawal", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to Withdrawal"} %>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>