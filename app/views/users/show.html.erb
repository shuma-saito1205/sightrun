<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p><%= link_to "profile edit", edit_user_path(@user.id) %></p>
  <p><%= link_to "Group index", groups_path %></p>
  <p><%= link_to "Activity", user_activities_path(current_user) %></p>
</div>

<% @posts.each do |post| %>
  <div>
    <p>User name：<%= post.user.name %></p> 
    <p>Title：<%= link_to post_path(post.id) do %>
      <%= post.title %>
    <% end %></p>
    <p>Body：<%= post.body %></p>
    <p><%= link_to "#{post.post_comments.count} comment", post_path(post.id) %></p>
  </div>
<% end %>
