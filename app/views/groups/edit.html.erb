<h1>Group edit</h1>

<%= form_with model: @group do |f| %>
  <label for="inputNeme">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  <label for="inputTheme">Theme</label>
  <%= f.text_area :theme, autofocus: true, id:"inputTheme" %>
  <% if @group.owner_id == current_user.id %>
    <%= f.submit "Update" %>
  <% end %>
<% end %>